{
  "manifest_version": 3,
  "name": "SP shift sync ",
  "version": "1.0",
  "description": "Scrape Kronos schedule and sync to Google Calendar",
  "permissions": [
    "scripting",
    "activeTab",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar"
    ]
  }
}
